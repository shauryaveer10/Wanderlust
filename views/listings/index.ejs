<% layout('/layouts/boilerplate') -%>
<body>

    <div id="filters">
        <a href="/listing/category/Trending">
        <div class="filter">
            <div> <i class="fa-solid fa-fire"></i> </div>
            <p>Trending</p>
            
        </div>
        </a>
        <a href="/listing/category/Rooms">
        <div class="filter">
            <div> <i class="fa-solid fa-bed"></i> </div>
            <p>Rooms</p>
            
        </div>
        </a>
        <a href="/listing/category/Iconic Cities">
        <div class="filter">
            <div> <i class="fa-solid fa-mountain-city"></i></div>
            <p>Iconic Cities</p>
            
        </div>
        </a>
        <a href="/listing/category/Amazing View">
        <div class="filter">
            <div> <i class="fa-solid fa-umbrella-beach"></i> </div>
            <p>Amazing View</p>
            
        </div>
        </a>
        <a href="/listing/category/Mountains">
        <div class="filter">
            <div> <i class="fa-solid fa-mountain"></i></div>
            <p>Mountains</p>
            
        </div>
        </a>
        <a href="/listing/category/Castle">
        <div class="filter">
            <div> <i class="fa-solid fa-chess-rook"></i> </div>
            <p>Castle</p>
            
        </div>
        </a>
        <a href="/listing/category/Camping">
        <div class="filter">
            <div> <i class="fa-solid fa-campground"></i></div>
            <p>Camping</p>
            
        </div>
        </a>
        <a href="/listing/category/Farm">
        <div class="filter">
            <div> <i class="fa-solid fa-tractor"></i></div>
            <p>Farm</p>
            
        </div>
        </a>
        <a href="/listing/category/Amazing Pools">
        <div class="filter">
            <div> <i class="fa-solid fa-person-swimming"></i></div>
            <p>Amazing Pools</p>
            
        </div>
        </a>
        <a href="/listing/category/Artic">
        <div class="filter">
            <div> <i class="fa-solid fa-snowflake"></i></div>
            <p>Artic</p>
            
        </div>
        </a>
        <a href="/listing/category/Houseboat">
        <div class="filter">
            <div> <i class="fa-solid fa-ferry"></i> </div>
            <p>Houseboat</p>
            
        </div>
        </a>
        <div class="tax-toggle">
                <div class="form-check-reverse form-switch">
                    <input class="form-check-input" type="checkbox" role="switch" id="switchCheckDefault">
                    <label class="form-check-label" for="switchCheckDefault">Display Total After Taxes</label>
                </div>
        </div>
    </div>
    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3">
       <% for(let listing of allListings ) { %> 
            <a href="/listing/<%= listing._id %>" class="listing-link">
            <div class="card col listing-card" >
                <img src="<%= listing.image.url %>" class="card-img-top" alt="listing_image" style = "height: 20rem;">
                <div class="card-img-overlay"></div>
                <div class="card-body">
                    <h5 class="card-title"><%= listing.title %></h5>
                    <p class="card-text">&#8377;<%= listing.price.toLocaleString("en-IN") %>/night
                    <i class="tax-info"> &nbsp;+18% GST</i></p>
                </div>
            </div>

            </a>
        <% } %>
        </div>
</body>


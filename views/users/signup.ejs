<% layout('/layouts/boilerplate') -%>
<body>
    <div class="row mt-3">
        <h2 class="col-6 offset-3">Signup for Wanderlust</h1>
        <div class="col-6 offset-3">
            <form action="/signup" method="post" class="needs-validation" novalidate>
                <div class="mb-3">
                <label for="username"class = "form-label" >Username</label>
                <input id="username" type="text" name="username" class="form-control" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <div class="mb-3">
                <label for="email"class = "form-label" class="needs-validation" novalidate>Email</label>
                <input id="email" type="text" name="email" class="form-control" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <div class="mb-3">
                <label for="password"class = "form-label" class="needs-validation" novalidate>Password</label>
                <input id="password" type="password" name="password" class="form-control" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
               <button class="btn btn-dark add-btn">Signup</button>
            </form>
        </div>
    </div>
</body>